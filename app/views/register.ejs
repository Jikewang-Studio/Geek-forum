<%- include header %>
	<div class="container" style="min-height:620px;">
			<form action="/admin/signup" method="post" name="user" role="form">
				<h3 style="text-align:center;">注册</h3>
				<div class="form-group">
					<label for="name">姓名</label>
					<input type="text" name="user[name]" class="form-control" id="name" placeholder="输入昵称">
				</div>
				<div class="form-group">
					<label for="password">密码</label>
					<input type="password" name="user[password]" class="form-control" id="password"  placeholder="输入密码">
				</div>
				<div class="form-group">
					<label for="repeat-password">确认密码</label>
					<input type="password" name="user[repeat-password]" class="form-control" id="repeat-password">
				</div>
				<!-- <input type="reset" name="取消"><input type="submit" name="提交"> -->
				<button type="reset" class="btn btn-default">取消</button>
				<button type="submit" class="btn btn-default">确定</button>
			</form>				
	</div>
<%- include botton %>